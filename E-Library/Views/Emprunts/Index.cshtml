@model IEnumerable<E_Library.Models.Emprunts>

@{
    ViewBag.Title = "Emprunts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste des emprunts</h2>

<p>
    @Html.ActionLink("Nouvel emprunt", "Create") &nbsp; &nbsp; | &nbsp; &nbsp;
    @Html.ActionLink("Liste des membres", "Index", "Membres") &nbsp; &nbsp; | &nbsp; &nbsp;
    @Html.ActionLink("Liste des livres", "Index", "Livres")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_emprunt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_emprunt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.statut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_retour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Livres.titre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Membres.IdentiteMembre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_emprunt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_emprunt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.statut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_retour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Livres.titre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Membres.IdentiteMembre)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.Id_emprunt }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_emprunt }) |
            @Html.ActionLink("Effacer", "Delete", new { id=item.Id_emprunt })
        </td>
    </tr>
}

</table>
