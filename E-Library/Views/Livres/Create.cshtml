@model E_Library.Models.Livres

@{
    ViewBag.Title = "Ajouter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestion des livres</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nouveau livre</h4>
        <hr />
        @Html.ValidationSummary(true)

        

        <div class="form-group">
            @Html.LabelFor(model => model.titre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.titre)
                @Html.ValidationMessageFor(model => model.titre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.auteur, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.auteur)
                @Html.ValidationMessageFor(model => model.auteur)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.editeur, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.editeur)
                @Html.ValidationMessageFor(model => model.editeur)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.exemplaires, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.exemplaires)
                @Html.ValidationMessageFor(model => model.exemplaires)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.categorie, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.categorie)
                @Html.ValidationMessageFor(model => model.categorie)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la Liste", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
